@using System.Web.Optimization

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="intro">
        <div class="registration-form">
            <h1>Register Now</h1>
            <form action="">
                <input type="text" class="input-box" placeholder="Your Firs Name">
                <input type="text" class="input-box" placeholder="Your Last Name">
                <input type="email" class="input-box" placeholder="Your Email">
                <input type="password" class="input-box" placeholder="Your Password">
                <input type="password" class="input-box" placeholder="Confirm Password">
                <div>
                    <input type="radio" id="male" name="gender"><label for="male">Male</label>
                    <input type="radio" id="female" name="gender"><label for="female">Female</label>
                </div>
                <button type="button" class="signup-btn">Create account</button>
                <p>Do you already have an account? <a href="@Url.Action("SignUp","Home")">Sign-up</a></p>
            </form>
        </div>
    </div>

