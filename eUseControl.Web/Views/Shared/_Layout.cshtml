@using System.Web.Optimization
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Top infinity</title>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script|Montserrat:400,700&display=swap&subset=cyrillic" rel="stylesheet">
    <link rel="icon" href="data:,">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/Assets/css-style/own_css_style")
    @Styles.Render("~/bundles/Assets/css-style/AdminLayout")
    @Styles.Render("~/bundles/Assets/css-style/About")
    @Styles.Render("~/bundles/Assets/css-style/Products")
    @Styles.Render("~/bundles/Assets/css-style/Contacts")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <i title="Merge-ți la pagina principală!">@Html.ActionLink("Top Infinity", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</i> <img src="~/Assets/images/pictograme/endless.png" />

            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @RenderSection("Dashboard", false)
    <div class="fundal">
        <div class="container body-content">
            @RenderBody()

            <!--    <footer>
                <p>&copy; @DateTime.Now.Year - Top Infinity Company</p>
            </footer>
            -->
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/Assets/js-style/AdminLayout_JS")
    @Scripts.Render("~/bundles/Assets/js-style/Products")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
