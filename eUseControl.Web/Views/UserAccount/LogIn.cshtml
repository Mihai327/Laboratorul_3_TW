<div class="intro">
    <div class="sign-up-form">
        <img src="~/Assets/images/user-icon.jpg">
        <h1> Logațivă </h1>
        @using (Html.BeginForm("LogIn", "UserAccount", FormMethod.Post))
        {
            <form action="">
                <div class="form-group">
                    @Html.TextBoxFor(model => model.EmailAdress, new { placeholder = "EmailAdress" })
                    <div>
                        @Html.ValidationMessageFor(model => model.EmailAdress, null, new { @class = "text text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Username, new { placeholder = "Username" })
                    <div>
                        @Html.ValidationMessageFor(model => model.Username, null, new { @class = "text text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                    <div>
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text text-danger" })
                    </div>
                </div>
                
                <div>
                    <input type="submit" value="Logațivă" class="btn btn-primary btn-lg" />
                </div>

                <div>
                    @Html.ValidationMessage("Error", null, new { @class = "text text-danger"});
                </div>

                <p>Nu aveți un cont creat? <a href="@Url.Action("Register","UserAccount")">Înregistrațivă</a></p>
            </form>
        }
    </div>
</div>
